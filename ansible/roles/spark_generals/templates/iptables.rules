*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# Allow SSH connections
-A INPUT -p tcp --dport 22 -j ACCEPT

-4 -A INPUT -s 10.0.CHANGE.0/24 ! -i lo -j ACCEPT

# Allow DNS, HTTP, HTTPS, Spark connections
-A INPUT -p udp --match multiport --dports 53,80,443,8080 -j ACCEPT
-A INPUT -p tcp --match multiport --dports 53,80,443,8080 -j ACCEPT

# Allow ping
-A INPUT -p icmp -j ACCEPT

# Allow established and related connections
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

COMMIT